<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Button fill color -->
    <solid android:color="#5c4438" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Padding inside the button -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

    <!-- Optional: Size (usually controlled in layout XML, not here) -->
    <size android:height="56dp" />
</shape>
